.post-list
  display grid
  grid-template-columns auto
  grid-gap $gap 0

// desktop
// @media (min-width: 64rem)
@media (min-width: 1280px)
  .container
    grid-template-columns auto $content-w $side-w auto
    grid-template-rows $header-h $nav-h auto $footer-h
    grid-template-areas\
      '. header   header .'\
      '. nav         nav .'\
      '. content    side .'\
      '. footer   footer .'
    grid-gap 0 $gap
