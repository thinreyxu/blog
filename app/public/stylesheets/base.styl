::-moz-selection
  background-color $select
  text-shadow none

::selection
  background-color $select
  text-shadow none

a
  link()

html
  font-family $sans
  font-size 20px
  line-height 2
  height 100%
  letter-spacing .05em
body
  font-family $sans
  font-size $m-text
  height 100%
  background $bg

.ir
  overflow hidden
  border 0
  background-color transparent

  &:before
    display block
    width 0
    height 100%
    content ''
