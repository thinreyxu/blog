section.side-post-metas
  article
    .post-meta.small.text-muted.block-container
      span.post-author
        a(href=`/u/${post.name}`)= `${post.name}`
      span.post-time
        +toDate(post.ctime, `YYYY 年 MM 月 DD 日`)
      if post.tags && post.tags.length
        span.post-tags
          each tag in post.tags
            a(href=`/tag/${tag}`)= `${tag}`
      span= `阅读：${post.pv}`
      span= `评论：${post.comments.length}`
      if user && user.name === post.name
        .post-options
          .btn-group
            a.btn.btn-xs.btn-default(href=`/edit/${post._id}`)= `编辑`
            a.btn.btn-xs.btn-default(href=`/remove/${post._id}`)= `删除`
