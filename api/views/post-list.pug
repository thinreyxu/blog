.post-list
  each post in posts
    section.post
      h2.post-title
        a(href=`/p/${post._id}`)= `${post.title}`
      a.post-author(href=`u/${post.name}`)
        = `${post.name}`
      span.post-time
        +toDate(post.ctime, `YYYY 年 MM 月 DD 日`)
      p.post-body.markdown-post
        != `${post.summary || post.content}`
      p.post-tags
        if post.tags && post.tags.length
          each tag in post.tags
            a(href=`/tag/${tag}`)= `${tag}`
        else
          = `&nbsp;`
      a.keepOnReading(href=`/p/${post.id}`)= `继续阅读`
include pager.pug
