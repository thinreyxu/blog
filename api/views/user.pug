extends layout.pug
block page-header
  h1= `${title}`
block content
  each post, index in posts
    section.post
      header
        h2.post-title
          a(href=`/p/${post._id}`)= `${post.title}`
        .post-meta.small.text-muted
          if post.tags && post.tags.length
            span.post-tags
              each tag in post.tags
                a(href=`/tag/${tag}`)= `${tag}`
          span.post-time= `${post.ctime}`
      .post-body.markdown-post
        != `${post.summary || post.content}`
      footer
        a.keepOnReading(href=`/p/${post._id}`)= `继续阅读`
  include pager.pug
