<%- include header %>
<form method="POST" class="form-horizontal">
  <div class="form-group">
    <label for="inputName" class="col-sm-2 control-label">用户名：</label>
    <div class="col col-sm-4">
      <input type="text" name="name" id="inputName" class="form-control input-sm">
    </div>
  </div>
  <div class="form-group">
    <label for="inputPassword" class="col-sm-2 control-label">密码：</label>
    <div class="col col-sm-4">
      <input type="password" name="password" id="inputPassword" class="form-control input-sm">
    </div>
  </div>
  <div class="form-group">
    <div class="col col-sm-4 col-sm-offset-2">
      <button type="submit" class="btn btn-default btn-sm btn-block">登录</button>
    </div>
  </div>
</form>
<%- include footer %>