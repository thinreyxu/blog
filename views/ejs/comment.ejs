<div class="comment">
  <div class="page-header text-center">
    <h4>评论</h4>
  </div>
  <% if (post.comments && post.comments.length) { %>
    <ul class="media-list comment-list">
      <% post.comments.forEach(function (comment) { %>
      <li class="media comment-item">
        <a href="#" class="avatar pull-left">
          <img src="<%= comment.avatar %>" alt="" width="40" height="40" class="media-object"/>
        </a>
        <div class="media-body">
          <h4 class="media-heading comment-title">
            <a href="<%= comment.website %>"><%= comment.name %></a>
            <span class="info text-muted">评论于 <%= comment.time %></span>
          </h4>
          <p class="comment-body"><%- comment.content %></p>
        </div>
      </li>
      <% }) %>
    </ul>
  <% } else { %>
    <p class="text-muted text-center">没有评论</p>
  <% } %>
  <hr>
  <div class="comment-compose">
    <form method="POST" action="/comment/<%= post._id %>" class="form-horizontal">
      <div class="form-group">
        <% if (user) { %>
          <div class="form-group">
            <label for="inputName" class="col-sm-2 control-label">姓名</label>
            <div class="col col-sm-8">
              <p class="form-control-static"><%= user.name %></p>
              <input type="hidden" name="name" id="inputName" class="form-control" value="<%= user.name %>">
            </div>
          </div>
          <div class="form-group">
            <label for="inputEmail" class="col-sm-2 control-label">邮箱</label>
            <div class="col col-sm-8">
              <p class="form-control-static"><%= user.email %></p>
              <input type="hidden" name="email" id="inputEmail" class="form-control" value="<%= user.email %>">
            </div>
          </div>
          <div class="form-group">
            <label for="inputWebsite" class="col-sm-2 control-label">网站</label>
            <div class="col col-sm-8">
              <p class="form-control-static">/u/<%= user.name %></p>
              <input type="hidden" name="website" id="inputWebsite" class="form-control" value="/u/<%= user.name %>">
            </div>
          </div>
        <% } else { %>
          <div class="form-group">
            <label for="inputName" class="col-sm-2 control-label">姓名</label>
            <div class="col col-sm-8">
              <input type="text" name="name" id="inputName" class="form-control">
            </div>
          </div>
          <div class="form-group">
            <label for="input" class="col-sm-2 control-label">邮箱</label>
            <div class="col col-sm-8">
              <input type="text" name="email" id="input" class="form-control">
            </div>
          </div>
          <div class="form-group">
            <label for="inputWebsite" class="col-sm-2 control-label">网站</label>
            <div class="col col-sm-8">
              <input type="text" name="website" id="inputWebsite" class="form-control" value="http://">
            </div>
          </div>
        <% } %>
        <div class="form-group">
          <label for="inputContent" class="col-sm-2 control-label">内容</label>
          <div class="col col-sm-8">
            <textarea name="content" id="inputContent" class="form-control" rows="5"></textarea>
          </div>
        </div>
        <div class="form-group">
          <div class="col col-sm-8 col-sm-offset-2">
            <button type="submit" class="btn btn-default">留言</button>
          </div>
        </div>
      </div>
    </form>
  </div>
</div>