<%= include header %>
<form method="POST" class="form-horizontal">
  <div class="form-group">
    <label for="inputTitle" class="col-sm-2 control-label">标题</label>
    <div class="col col-sm-10">
      <input type="text" name="title" id="inputTitle" class="form-control" value="<%= post.title %>">
    </div>
  </div>
  <div class="form-group">
    <label for="inputPost" class="col-sm-2 control-label">正文</label>
    <div class="col col-sm-10">
      <textarea name="post" id="inputPost" class="form-control" rows="15"><%= post.post %></textarea>
    </div>
  </div>
  <div class="form-group">
    <label for="inputTags" class="col-sm-2 control-label">标签</label>
    <div class="col col-sm-10">
      <input type="text" name="tags" id="inputTags" class="form-control" value="<%= post.tags ? post.tags.join(', ') : '' %>">
    </div>
  </div>
  <div class="form-group">
    <div class="col col-sm-10 col-sm-offset-2">
      <button type="submit" class="btn btn-default">保存修改</button>
    </div>
  </div>
</form>
<%= include footer %>